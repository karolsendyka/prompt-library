---
import type { CollectionEntry } from "astro:content";

interface Props {
  prompts: CollectionEntry<"prompts">[];
}

const { prompts } = Astro.props;
---

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Prompt Library</h1>
  <ul class="space-y-4">
    {
      prompts.map((prompt) => (
        <li class="border rounded-lg shadow-sm">
          <details class="p-4">
            <summary class="cursor-pointer font-semibold text-lg">{prompt.data.title}</summary>
            <div class="prose mt-2">{prompt.body}</div>
          </details>
        </li>
      ))
    }
  </ul>
</div>
